#!/usr/bin/env bash
# install haproxy
SETUP="frontend myapp
        bind *:80
        default_backend myapp_servers
backend myapp_servers
        balance roundrobin
        server server1 54.87.215.0
        server server2 100.25.16.32
"
sudo apt-get -y update
sudo apt-get -y install haproxy
sudo sh -c 'echo "$SETUP" >> /etc/haproxy/haproxy.cfg'
sudo service haproxy restart
